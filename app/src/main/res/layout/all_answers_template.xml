<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_template"
    android:orientation="vertical"
    android:padding="3dp">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <customfonts.MyTextView
                android:id="@+id/all_answers_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Hi i need a help in this question please help me regarding this"
                android:textSize="12dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/time_icon"
                        android:layout_centerVertical="true"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        app:srcCompat="@drawable/ic_access_time_black_24dp"/>
                    <customfonts.MyTextView
                        android:layout_toRightOf="@+id/time_icon"
                        android:paddingLeft="5dp"
                        android:id="@+id/all_answers_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16 minutes ago"
                        android:layout_centerVertical="true"
                        android:textSize="10dp"
                        android:textStyle="italic"
                        />

                </RelativeLayout>

                <customfonts.MyRegulerText
                    android:paddingTop="5dp"
                    android:layout_centerVertical="true"

                    android:id="@+id/all_answers_price"
                    android:layout_alignParentRight="true"
                    android:text="12 PKR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:textColor="#1269ba"
                    android:textSize="20dp"

                    />
                <customfonts.MyTextView
                    android:padding="5dp"
                    android:id="@+id/all_answers_status"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accepted"
                    android:background="@drawable/answer_accepted_background"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    />

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>