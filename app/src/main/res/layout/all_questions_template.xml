<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_template"
    android:orientation="vertical"
    android:padding="3dp">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <customfonts.MyTextView
                android:id="@+id/category_wise_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Hi ineed a help in this question please help me regarding this"
                android:textSize="12dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <customfonts.MyTextView
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/question_category_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accounting"
                    android:background="@drawable/skill_background_all"
                    android:textSize="11dp"

                    />
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/clock_icon"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_width="10dp"
                        android:layout_toLeftOf="@+id/question_category_date"
                        android:layout_height="10dp"
                        app:srcCompat="@drawable/ic_access_time_black_24dp"/>
                    <customfonts.MyTextView
                        android:paddingTop="5dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/question_category_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16 minutes ago"
                        android:layout_weight="1"
                        android:textSize="10dp"
                        android:textStyle="italic"
                        />
                </RelativeLayout>

                <customfonts.MyTextView
                    android:padding="5dp"
                    android:id="@+id/question_category_price"
                  android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51 PKR"
                    android:gravity="right"
                    android:textColor="#1269ba"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>